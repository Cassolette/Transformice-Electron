{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "jsonVersion": {
      "type": "integer",
      "description": "The internal JSON release version, used for compatibility checks."
    },
    "homepage": {
      "type":"string",
      "description": "The URL to the homepage."
    },
    "archLatest": {
      "type": "object",
      "description": "Lists the latest versions for the architectures.",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "description": "Properties for the architecture identifier.",
          "properties": {
            "stable": {
              "type": "string",
              "description": "Latest stable branch version for the architecture."
            }
          }
        }
      }
    },
    "urlSyntax": {
      "type": "object",
      "description": "The default syntax for all the release URL. This can be individually overriden in the meta with `overrideArchUrl`.",
      "patternProperties": {
        "^.*$": {
          "type": "string",
          "description": "The syntax for the architecture identifier."
        }
      }
    },
    "releaseMeta": {
      "type": "object",
      "description": "Lists metadata for the various releases.",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "description": "Properties for the release version identifier.",
          "properties": {
            "version": {
              "type": "string",
              "description": "The release version identifier."
            },
            "incrementalVersion": {
              "type": "integer",
              "description": "The incremental version identifier."
            },
            "type": {
              "type": "string",
              "description": "The release branch."
            },
            "overrideArchUrl": {
              "type": "object",
              "description": "The direct URL override for the architecture.",
              "patternProperties": {
                "^.*$": {
                  "type": "string",
                  "description": "The direct URL override for the architecture identifier."
                }
              }
            }
          },
          "required": ["version", "incrementalVersion", "type"]
        }
      }
    }
  },
  "required": ["jsonVersion", "archLatest", "urlSyntax", "releaseMeta"]
}
